  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "eslintConfig": {
    "extends": "@repo/config/eslint-design-system.config.js"
  }
}

