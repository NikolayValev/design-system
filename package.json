{
  "name": "@repo/root",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo root â€” managed by TurboRepo + pnpm workspaces",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test:stories": "pnpm --filter @apps/storybook test:stories:ci",
    "test:vision": "pnpm --filter @nikolayvalev/design-system test:vision-registry && pnpm --filter @apps/storybook test:vision",
    "test:visual": "pnpm --filter @apps/storybook test:visual",
    "test:visual:update": "pnpm --filter @apps/storybook test:visual:update",
    "test:design": "pnpm test:stories && pnpm test:vision && pnpm test:visual",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "storybook": "pnpm --filter @apps/storybook dev",
    "storybook:build": "pnpm --filter @apps/storybook build",
    "new:polyrepo-manifest": "node scripts/apps/new-polyrepo-manifest.mjs",
    "contracts:openapi:sync": "node scripts/contracts/sync-openapi-contract.mjs",
    "contracts:openapi:check": "node scripts/contracts/sync-openapi-contract.mjs --check",
    "contracts:linked-openapi:sync": "node scripts/contracts/sync-linked-openapi-snapshots.mjs",
    "contracts:linked-openapi:check": "node scripts/contracts/sync-linked-openapi-snapshots.mjs --check",
    "contracts:linked-openapi:check:strict": "node scripts/contracts/sync-linked-openapi-snapshots.mjs --check --strict",
    "contracts:linked-error-envelope:check": "node scripts/contracts/validate-linked-error-envelopes.mjs",
    "contracts:linked-error-envelope:check:strict": "node scripts/contracts/validate-linked-error-envelopes.mjs --strict",
    "contracts:error:validate": "node scripts/contracts/validate-error-envelope.mjs",
    "validate:dependent-apps-config": "node scripts/ci/validate-dependent-apps-config.mjs",
    "report:linked-contract-readiness": "node scripts/ci/report-linked-contract-readiness.mjs",
    "report:linked-contract-readiness:write": "node scripts/ci/report-linked-contract-readiness.mjs --out docs/linked-contract-readiness.md",
    "validate:platform-contracts": "node scripts/ci/validate-platform-contracts.mjs",
    "validate:platform-contracts:strict": "node scripts/ci/validate-platform-contracts.mjs --strict",
    "validate:linked-contracts": "node scripts/ci/validate-linked-contracts.mjs",
    "validate:linked-contracts:strict": "node scripts/ci/validate-linked-contracts.mjs --strict",
    "validate:linked-manifests": "node scripts/ci/validate-linked-repo-manifests.mjs",
    "validate:linked-manifests:strict": "node scripts/ci/validate-linked-repo-manifests.mjs --strict",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=@nikolayvalev/* && changeset publish",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.4.0",
    "rimraf": "^6.0.0",
    "turbo": "^2.4.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}
