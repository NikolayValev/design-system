{
  "name": "@repo/root",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo root â€” managed by TurboRepo + pnpm workspaces",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test:stories": "pnpm --filter @apps/storybook test:stories:ci",
    "test:visual": "pnpm --filter @apps/storybook test:visual",
    "test:visual:update": "pnpm --filter @apps/storybook test:visual:update",
    "test:design": "pnpm test:stories && pnpm test:visual",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "storybook": "pnpm --filter @apps/storybook dev",
    "storybook:build": "pnpm --filter @apps/storybook build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=@nikolayvalev/* && changeset publish",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.4.0",
    "rimraf": "^6.0.0",
    "turbo": "^2.4.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}
