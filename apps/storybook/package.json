{
  "name": "@apps/storybook",
  "version": "0.1.2",
  "private": true,
  "description": "Storybook workspace for @nikolayvalev/design-system",
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build --output-dir dist/storybook --disable-telemetry",
    "serve:storybook": "http-server dist/storybook -p 6006 --silent",
    "test:stories": "test-storybook --url http://127.0.0.1:6006 --maxWorkers=2",
    "test:stories:ci": "pnpm run build && start-server-and-test \"pnpm run serve:storybook\" http://127.0.0.1:6006 \"pnpm run test:stories\"",
    "test:vision": "pnpm --filter @nikolayvalev/design-system build && playwright test tests/visual/vision-switch.spec.ts",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src .storybook"
  },
  "dependencies": {
    "@nikolayvalev/design-system": "workspace:*",
    "lucide-react": "^0.575.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@repo/config": "workspace:*",
    "@storybook/addon-a11y": "^8.6.16",
    "@storybook/addon-essentials": "^8.6.16",
    "@storybook/addon-interactions": "^8.6.16",
    "@storybook/react": "^8.6.16",
    "@storybook/react-vite": "^8.6.16",
    "@storybook/test": "^8.6.16",
    "@storybook/test-runner": "^0.21.0",
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.2",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "start-server-and-test": "^2.1.3",
    "storybook": "^8.6.16",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3"
  }
}
