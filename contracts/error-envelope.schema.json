{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nikolayvalev.dev/contracts/error-envelope.schema.json",
  "title": "ErrorEnvelope",
  "description": "Standard API error envelope for platform services.",
  "type": "object",
  "required": ["error"],
  "additionalProperties": false,
  "properties": {
    "error": {
      "type": "object",
      "required": ["code", "message", "request_id"],
      "additionalProperties": true,
      "properties": {
        "code": {
          "type": "string",
          "minLength": 1
        },
        "message": {
          "type": "string",
          "minLength": 1
        },
        "request_id": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
